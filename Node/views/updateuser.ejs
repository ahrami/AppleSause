<!DOCTYPE html>
<html>
<head>
	<%- include('./partials/head.ejs') %>
</head>
<body>
	<%- include('./partials/topbar.ejs') %>
	<div class="content">

		<h3>Edit your account</h3>

		<form class="forminput" id="createuser" name="createuser" action="/profile/edit/<%= user.username %>" method="POST" enctype="multipart/form-data">
			<div>
				<div class="formlabels">
					<h4>Choose your profile picture:</h4>
					<h4>Enter your display name:</h4>
					<h4>Enter your E-mail:</h4>
					<h4 id="address">Enter your address:</h4>
				</div>

				<div class="forminputs">
					<input type="file" accept=".png" id="picture" name="picture" >

					<div class="forminput">
					<input type="text" id="displayname" placeholder="Display name" name="displayname" value="<%= user.displayname %>" required>
					</div>
					
					<div class="forminput">
					<input type="text" id="email" placeholder="E-mail" name="email" value="<%= user.email %>" required>
					</div>
					
					<div class="forminput" id="address">
					<textarea type="text" id="address" placeholder="Address" rows=3 name="address"><%= user.address %></textarea>
					</div>
				</div>
			</div>
			<div></div>
			<button class="forminput">Submit</button>
		</form>
	</div>
	<%- include('./partials/footer.ejs') %>
</body>
</html>